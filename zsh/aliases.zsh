# List in color
alias ls="ls -color"

# List in long format, include dotfiles.
alias l="ls -la"

# List in long format, only directories.
alias ld="ls -ld */"

# Go up directories.
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."

# docker-machine
alias dm='docker-machine'
alias evalDkr='eval "$(docker-machine env dkr)"'

# terraform
alias tf='terraform'

# sourcetree
alias sourcetree='open -a SourceTree'
